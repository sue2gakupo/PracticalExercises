@model IEnumerable<GuestBooks.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h1 >留言列表</h1>

<p>
    <a asp-action="Create" class=" btn btn-outline-warning">✒️新增留言</a>
</p>

@foreach (var item in Model)
{
    <a asp-action="Display" asp-route-id="@item.BookID" style="text-decoration:none;color:inherit;">
        <div class="card mb-4" style="cursor:pointer;">
            <div class="row g-0">
                <div class="col-md-4">
                    @if (item.Photo != null)
                    {
                        <img src="~/BookPhotos/@item.Photo" class="img-fluid rounded" style="height:200px;object-fit:cover;">
                    }
                </div>
                <div class="col-md-8">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@Html.Raw(item.Description.Replace("\r\n", "<br>"))</p>
                        <div class="mt-auto text-end">
                            <small class="text-body-secondary">
                                @item.Author
                                於 @item.CreateDate
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </a>
}
