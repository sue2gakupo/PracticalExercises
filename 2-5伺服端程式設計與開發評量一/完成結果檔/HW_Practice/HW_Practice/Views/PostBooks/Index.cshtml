@model IEnumerable<GuestBooks.Models.Book>

@{
    ViewData["Title"] = "留言板";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">留下評論(❁´◡`❁)</a>
</p>

@foreach (var item in Model)
{
    <div class="card mb-4 ">
        <div class="row g-0">
            <div class="col-md-4">
                @if (item.Photo != null)
                {
                    <img src="~/SeedPhoto/@item.Photo" class="img-fluid rounded-start" style="height:200px;object-fit:cover;">
                }
            </div>
            <div class="col-md-8">
                <div class="card-body d-flex flex-column" >
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title) </h5>
                    <p class="card-text"> @Html.Raw(item.Description.Replace("\r\n", "<br>"))</p>
                    <div class="mt-auto text-end">
                        <p>
                            <small class="text-body-secondary">
                                @Html.DisplayFor(modelItem => item.Author)
                                於 @Html.DisplayFor(modelItem => item.CreateDate)
                            </small>
                            <a asp-action="Display" asp-route-id="@item.BookID">查看更多</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



 <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 
