@model GuestBooks.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1 class=" fw-semibold ">發布留言</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="BookID" class="form-control " value="@Guid.NewGuid()" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input type="file" name="newPhoto" id="newPhoto" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
                <span class="text-danger">@ViewData["ErrMessage"]</span>
            </div>

            <div class="form-group mt-3 d-flex gap-2">
                <input type="submit" value="確定留言" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">返回上一頁</a>
            </div>

        </form>
    </div>

    <div class="col-md-8 mt-3 rounded border border-3" >
        <h4 class="bg-warning bg-opacity-25 text-center mt-3" style="min-height: 60px; line-height: 60px;">
            照片上傳預覽
        </h4>
        <hr />
        <img id="photoPreview" class="img-thumbnail mt-2" />
    </div>

</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @* 加入照片預覽效果*@
    <script>
        $('#newPhoto').on('change',function(){
        let files=this.files[0];

        if(files){
            let reader=new FileReader();

            reader.onload=function(e){
                $('#photoPreview').attr('src',e.target.result);
            }

            reader.readAsDataURL(files);

        }else{
            $('#photoPreview').attr('src','');
        }

        });

    </script>


}
