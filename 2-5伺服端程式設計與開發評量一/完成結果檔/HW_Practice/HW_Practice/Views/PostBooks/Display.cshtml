@model GuestBooks.Models.Book

@{
    ViewData["Title"] = "Display"; 
}

<div>
    <div class="card text-bg-dark">
        <img src="~/SeedPhoto/ @Model.Photo)" class="card-img" alt="...">
        <div class="card-img-overlay">
            <h5 class="card-title">@Html.DisplayNameFor(modelItem => Model.Title)</h5>
            <p class="card-text">@Html.Raw(Model.Description.Replace("\r\n", "<br>"))</p>
            <p class="card-text"><small>@Html.DisplayFor(modelItem => Model.CreateDate)</small></p>
        </div>
    </div>
</div>


<div id="ReBookList">
    @await Component.InvokeAsync("VCReBooks", new { bookID = Model.BookID })
</div>


