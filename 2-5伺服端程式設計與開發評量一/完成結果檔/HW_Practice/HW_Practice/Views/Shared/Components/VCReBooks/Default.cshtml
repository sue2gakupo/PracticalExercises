@model IEnumerable<GuestBooks.Models.ReBook>
@{
    Layout = null;
}



@if (Model.Count() != 0)
{
    <h4 class="text-start border border-1">所有回覆</h4>
    <div class="border border-1 rounded p-4 bg-opacity-50 bg-success ">
        @foreach (var item in Model)
        {

            <p>  @Html.DisplayFor(modelItem => item.Description)</p>
            <p class="text-end">
                @Html.DisplayFor(modelItem => item.Author)
                於 @Html.DisplayFor(modelItem => item.CreateDate) 回覆
            </p>
        }
        

    </div>

}
;
