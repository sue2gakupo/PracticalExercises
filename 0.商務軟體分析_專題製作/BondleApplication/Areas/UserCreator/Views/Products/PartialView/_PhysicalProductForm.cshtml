
@model BondleApplication.Models.PhysicalProduct

<form id="physicalProductForm" data-product-id="@Model.ProductID">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="ProductID" type="hidden" />
    <input asp-for="ProductID" type="hidden" />

    <div class="card">
        <div class="card-header">
            <h5>實體商品設定</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Weight" class="form-label"></label>
                        <input asp-for="Weight" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Length" class="form-label"></label>
                        <input asp-for="Length" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Length" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Width" class="form-label"></label>
                        <input asp-for="Width" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Width" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Height" class="form-label"></label>
                        <input asp-for="Height" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ShippingFeeType" class="form-label"></label>
                        <input asp-for="ShippingFeeType" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="ShippingFeeType" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="IsFragile" class="form-check-input" type="checkbox" />
                                <label asp-for="IsFragile" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success">儲存實體商品資料</button>
            </div>
        </div>
</form>

<script>
    $(document).ready(function() {
        $('#physicalProductForm').on('submit', function(e) {
            e.preventDefault();

            const url = '@Model.ProductID' > 0 ? '/PhysicalProduct/Update' : '/PhysicalProduct/Create';

            $.post(url, $(this).serialize())
            .done(function(data) {
                if (data.success) {
                    toastr.success(data.message);
                } else {
                    toastr.error(data.errors ? data.errors.join('<br>') : '儲存失敗');
                }
            })
            .fail(function() {
                toastr.error('發生錯誤，請稍後再試');
            });
        });
    });
</script>
