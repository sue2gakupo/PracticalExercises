@model BondleApplication.Models.ViewModel.ProductCreateVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "新增商品";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>

    <form asp-area="UserCreator" asp-controller="Products" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- 主要商品資訊 -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>基本資訊</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="ProductName" class="form-label">商品名稱</label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">商品說明</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="form-label">定價</label>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="ProductType" class="form-label">商品類型</label>
                                    <select id="productTypeSelect" asp-for="ProductType" class="form-control">
                                        <option value="1">實體商品</option>
                                        <option value="2">數位商品</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="CategoryID" class="form-label">商品分類</label>
                                    <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
                                        <option value="">-- 不選擇 --</option>
                                    </select>
                                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr />
                        <!-- 動態載入 Physical / Digital 詳細表單 -->
                        <div id="detailsContainer"></div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">建立</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 主圖區塊 -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>主圖</h4>
                    </div>
                    <div class="card-body">
                        <input asp-for="MainImage" type="file" class="form-control" id="mainImageInput" />
                        <img id="mainImagePreview" class="img-fluid mt-3 d-none" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <script>
        function loadDetails(t){
          $("#detailsContainer")
            .load(`@Url.Action("LoadDetails", "Products", new { area = "UserCreator" })?type=${t}`);
        }
        $("#productTypeSelect").on("change", function(){
          loadDetails(this.value);
        });
        loadDetails($("#productTypeSelect").val() || 1);

        $("#mainImageInput").on("change", function(){
          const f = this.files?.[0]; if(!f) return;
          const url = URL.createObjectURL(f);
          $("#mainImagePreview").attr("src", url).removeClass("d-none");
        });
    </script>
}


