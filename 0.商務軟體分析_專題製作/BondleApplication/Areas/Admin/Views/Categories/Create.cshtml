@model BondleApplication.Models.Category

@{
    ViewData["Title"] = "新增全站商品分類";
}

<h1>@ViewData["Title"]</h1>


<hr />
<form asp-area="Admin" asp-controller="Categories" asp-action="Create"
      method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    @* <div class="mb-3">
        <label class="form-label">分類圖示</label>
        <input type="file" name="iconFile" class="form-control" />
    </div> *@

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="SortOrder" class="form-label"></label>
            <input asp-for="SortOrder" class="form-control" type="number" />
            <span asp-validation-for="SortOrder" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-check mt-4">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label asp-for="IsActive" class="form-check-label">啟用分類</label>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">送出</button>
        <a asp-action="Index" class="btn btn-secondary">返回全站商品分類清單</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
