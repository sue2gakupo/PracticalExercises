@model IEnumerable<BondleApplication.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IconUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SortOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IconUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentCategory.CategoryID)
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Categories"  asp-action="Edit" asp-route-id="@item.CategoryID">編輯</a> |
                    <a asp-area="Admin" asp-controller="Categories"  asp-action="Details" asp-route-id="@item.CategoryID">詳細資訊</a> |
                    <a asp-area="Admin" asp-controller="Categories"  asp-action="Delete" asp-route-id="@item.CategoryID">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
