@model BondleApplication.Models.Member

@{
    ViewData["Title"] = "註冊";
}

<h1>@ViewData["Title"]</h1>

<h4>加入Bondle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">電子信箱</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label">密碼</label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">名稱(選填)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">

                <input type="submit" value="註冊" class="btn btn-primary" />
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">取消註冊</a>
            </div>
        </form>
    </div>
</div>



