@model BondleApplication.Models.Member

@{
    ViewData["Title"] = "登入";
}

<h2 class="fw-bold">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Login" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">帳號</label>
                <input asp-for="Email" class="form-control" placeholder="請輸入電子信箱" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PasswordHash" class="control-label">密碼</label>
                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="請輸入密碼" autocomplete="current-password" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">登入</button>
            </div>

            @if (ViewData["Error"] != null)
            {
                <div class="text-danger mt-2">
                    @ViewData["Error"]
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
