@* Physical Default.cshtml *@
@model BondleApplication.Models.ViewModel.ProductCreateVM
<div class="row g-3">
    <div class="col-md-4"><label class="form-label">重量(kg)</label><input asp-for="Weight" class="form-control" /></div>
    <div class="col-md-4"><label class="form-label">長(cm)</label><input asp-for="Length" class="form-control" /></div>
    <div class="col-md-4"><label class="form-label">寬(cm)</label><input asp-for="Width" class="form-control" /></div>
    <div class="col-md-4"><label class="form-label">高(cm)</label><input asp-for="Height" class="form-control" /></div>
    <div class="col-md-4"><label class="form-label">出貨天數</label><input asp-for="DeliveryDays" class="form-control" /></div>
    <div class="col-md-4"><label class="form-label">運費類型</label><input asp-for="ShippingFeeType" class="form-control" /></div>
    <div class="col-md-4"><label class="form-label">固定運費</label><input asp-for="FixedShippingFee" class="form-control" /></div>
    <div class="col-md-4 form-check mt-4">
        <input asp-for="IsFragile" class="form-check-input" type="checkbox" />
        <label class="form-check-label">易碎</label>
    </div>
    <div class="col-12"><label class="form-label">包裝備註</label><input asp-for="PackagingNote" class="form-control" /></div>
    <div class="col-12">
        <label class="form-label">主圖上傳</label>
        <input asp-for="MainImage" type="file" class="form-control" />
        <img id="mainPreview" class="mt-2 img-fluid d-none" />
    </div>
</div>

<script>
    document.querySelector('input[name="MainImage"]')?.addEventListener('change', e=>{
      const f=e.target.files?.[0]; if(!f) return;
      const url=URL.createObjectURL(f);
      const img=document.getElementById('mainPreview'); img.src=url; img.classList.remove('d-none');
    });
</script>
